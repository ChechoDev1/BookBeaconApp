<!-- item_book.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Titulo: "
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="HOLAAAA"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toStartOf="@+id/agregar"
        app:layout_constraintStart_toEndOf="@+id/tvTitle"
        app:layout_constraintTop_toTopOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Autores: "
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/authorTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="HOLAAAA"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvAuthor"
        app:layout_constraintEnd_toStartOf="@+id/agregar"
        app:layout_constraintStart_toEndOf="@+id/tvAuthor"
        app:layout_constraintTop_toTopOf="@id/tvAuthor" />

    <TextView
        android:id="@+id/tvGenres"
        android:layout_width="65dp"
        android:layout_height="wrap_content"
        android:text="Generos: "
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor" />

    <TextView
        android:id="@+id/genresTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="HOLAAAA"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvGenres"
        app:layout_constraintEnd_toStartOf="@+id/agregar"
        app:layout_constraintStart_toEndOf="@+id/tvGenres"
        app:layout_constraintTop_toTopOf="@id/tvGenres" />

    <Button
        android:id="@+id/agregar"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Agregar"
        android:textColor="@color/white"
        android:textSize="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/detalles"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/detalles"
        android:layout_width="68dp"
        android:layout_height="32dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Detalles"
        android:textColor="@color/white"
        android:textSize="6dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>