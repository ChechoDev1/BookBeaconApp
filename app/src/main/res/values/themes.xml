<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectBookBeaconApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray  </item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/brandColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/brandColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="background">@color/white</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/brandColor</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="ModoRojo" parent="Base.Theme.ProjectBookBeaconApp" >
        <item name="android:background">#FFFF0000</item>
    </style>
</resources>